                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Yusukdhfksjdfjks" Margin="0 10 0 0"/>
                                    <materialDesign:Badged Grid.Column="1" Badge="3" VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
                            <Image Height="50" Width="50" Source="https://everydaynutrition.co.uk/wp-content/uploads/2015/01/default-user-avatar.png" />
                            <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                <StackPanel Orientation="Horizontal" Height="30">
                                    <TextBlock Text="Kenan" FontWeight="Bold" Width="150"/>
                                    <TextBlock Text="11:00"  />
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Yusukdhfksjdfjks" Margin="0 10 0 0"/>
                                    <materialDesign:Badged Grid.Column="1" Badge="3" VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox.Items>

            </ListBox>
            <!--#endregion-->


        </StackPanel>
    </Grid>
</Window>
